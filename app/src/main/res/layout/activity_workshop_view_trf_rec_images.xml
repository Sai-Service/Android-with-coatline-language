            android:layout_margin="8dp"
            android:src="@drawable/uploadimgstk"
            android:scaleType="centerCrop" />


        <ImageView
            android:id="@+id/VEH_IMAGE7"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="8dp"
            android:src="@drawable/uploadimgstk"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/VEH_IMAGE8"
