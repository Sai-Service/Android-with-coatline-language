<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lineralay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_background2">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/saiservicelogo"
                android:contentDescription="Logo"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/logoutBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logout"
                android:background="@drawable/logout_button_background"
                android:padding="8dp"
                android:elevation="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Report Title Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/spinnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/title_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PARKING VEHICLE REPORT"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="24dp" />

                    <TextView
                        android:id="@+id/citySpinnerTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Location"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/citySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/modern_spinner_gradient"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Department"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/typeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/modern_spinner_gradient"
                        android:elevation="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Date Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Select Date Range"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <!-- Date Picker Buttons -->
                    <LinearLayout
                        android:id="@+id/buttonLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/fromDatePicker"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="FROM DATE"
                            android:background="@drawable/date_picker_button"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"
                            android:elevation="4dp" />

                        <Button
                            android:id="@+id/toDatePicker"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="TO DATE"
                            android:background="@drawable/date_picker_button"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"
                            android:elevation="4dp" />

                    </LinearLayout>

                    <!-- Date Display and Action -->
                    <LinearLayout
                        android:id="@+id/textViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/fromDateLabel"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/date_display_background"
                            android:hint="FROM DATE"
                            android:textColorHint="#7986CB"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:padding="8dp" />

                        <Button
                            android:id="@+id/fetchData"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginHorizontal="8dp"
                            android:text="VIEW REPORT"
                            android:background="@drawable/primary_button_modern"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"
                            android:paddingHorizontal="20dp"
                            android:elevation="6dp" />

                        <TextView
                            android:id="@+id/toDateLabel"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/date_display_background"
                            android:hint="TO DATE"
                            android:textColorHint="#7986CB"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Report Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/viewReportLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/summary_card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Report Summary"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/rowCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Row Count"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#3F51B5"
                        android:textSize="14sp"
                        android:background="@drawable/count_display_background"
                        android:padding="12dp"
                        android:minWidth="120dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Data Table Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Report Data"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Header Table -->
                    <HorizontalScrollView
                        android:id="@+id/headerHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:scrollbars="none"
                        android:background="@drawable/table_header_background">

                        <TableLayout
                            android:id="@+id/headerTableLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp">
                        </TableLayout>

                    </HorizontalScrollView>

                    <!-- Data Table -->
                    <HorizontalScrollView
                        android:id="@+id/dataHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:fillViewport="true"
                        android:background="@drawable/table_background">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TableLayout
                                android:id="@+id/tableLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp">
                            </TableLayout>

                        </ScrollView>

                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/progressBarCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:indeterminateTint="#3F51B5" />

                <TextView
                    android:id="@+id/TextProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:text="Data is loading....."
                    android:textColor="#1A237E"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>