<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/harshbg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chassisTextView"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/rounded_bg"
            android:hint="Chassis No"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chassisTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:layout_below="@id/progressBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:background="@color/semi_transparent_white"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/uploadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Image is uploading"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnOpenCamera"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadingTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="107dp"
            android:background="@drawable/modern_button_background"
            android:text="Click Picture" />

        <Button
            android:id="@+id/qrBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnOpenCamera"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-46dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:background="@drawable/modern_button_background"
            android:text="QR Code" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/qrBtn"
            android:layout_marginTop="12dp"
            android:background="@drawable/modern_button_background"
            android:text="Upload Image"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnUpload"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/modern_button_background"
            android:text="Delete"
            android:visibility="invisible" />

        <Button
            android:id="@+id/scanQrBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDelete"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="102dp"
            android:visibility="invisible"
            android:background="@drawable/custom_button_background"
            android:text="Scan QR Code" />

        <TextView
            android:id="@+id/qrResultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scanQrBtn"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_textview"
            android:padding="16dp"
            android:text="Scanned QR Code: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="invisible"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attributeTextView"
            android:layout_width="104dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/edittext"
            android:hint="City"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="223dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="140dp"
            android:background="@drawable/saiservicelogo" />

    </RelativeLayout>

</ScrollView>

