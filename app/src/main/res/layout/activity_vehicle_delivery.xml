    <LinearLayout
        android:id="@+id/lineralay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:src="@drawable/sslogo"
            android:contentDescription="Logo"
            android:layout_marginEnd="10dp" />


        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logout"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineralay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME: "
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="#0429F6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="LOCATION: "
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="locId"
            android:textColor="#0429F6"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Content Section -->



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/veh2_gradient"
            android:elevation="6dp"
            android:layout_margin="16dp">

            <!-- Invoice Number Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Gate Pass Number"
                android:textColor="#05081C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/invoiceNumberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Gate Pass Number"
                android:inputType="textCapCharacters"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <!-- Search Button -->
            <Button
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:backgroundTint="#264653"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp" />

            <!-- TextView for Invoice Data -->
            <TextView
                android:id="@+id/invoiceNumberTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/vehicleNumberTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/nameTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/transactionNoTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/transactionNoDateTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"
                android:text="You can edit the contact no for OTP"
                android:textColor="#05081C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/contactNoTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/partyId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/amountRemainingTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/serviceExecutive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/modelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/addressTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="#040303"
                android:padding="12dp"
                android:background="@drawable/textview_background"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:id="@+id/invoiceDataLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Payment Mode"
                    android:textColor="#05081C"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/paymentModeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modern_spinner_background"
                    android:elevation="2dp"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Select Payment Method"
                    android:textColor="#05081C"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/paymentIdSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modern_spinner_background"
                    android:elevation="2dp"
                    android:padding="12dp" />


                <Button
                    android:id="@+id/sendOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#61A5C2"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:text="Generate OTP"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Enter OTP"
                    android:textColor="#05081C"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/otpInputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:elevation="2dp"
                    android:hint="Enter OTP from the user"
                    android:inputType="number"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/verifyOTPButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#61A5C2"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:text="Verify OTP"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Enter customer paying amount"
                    android:textColor="#05081C"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/amountPaidTxtField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:elevation="2dp"
                    android:hint="Enter Amount Paid By User"
                    android:inputType="textCapCharacters"
                    android:padding="12dp" />


                <TextView
                    android:id="@+id/upiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Enter Transaction Number"
                    android:textColor="#05081C"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/upiInputTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:elevation="2dp"
                    android:hint="Enter UPI Transaction Number"
                    android:inputType="text"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/imageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="IMAGE OF UPI DETAILS"
                    android:textColor="#05081C"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="276dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/semi_transparent_white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagehint"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView">

                    <ImageButton
                        android:id="@+id/captureImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/camera"
                        android:elevation="4dp"
                        android:padding="12dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                    <ImageButton
                        android:id="@+id/deleteImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/trash"
                        android:elevation="4dp"
                        android:padding="12dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/detailsSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Details"
                    android:backgroundTint="#047E10"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="4dp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/clearFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REFRESH"
                android:backgroundTint="#2A9D8F"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>









