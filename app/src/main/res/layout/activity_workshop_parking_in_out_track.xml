<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@drawable/header_gradient">

            <ImageView
                android:id="@+id/amazonImage"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/saiservicelogocp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Fixed Layout for User Info -->
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/info_background"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amazonImage">

                <!-- Username Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USERNAME: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="username"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCATION: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/locIdTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locId"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Department Row -->
                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deptTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEPARTMENT: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/deptIntent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locId"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Action Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/title_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="VEHICLE STATUS CHECK"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:id="@+id/vehHistoryLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/forNewVehicleOut"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:background="@drawable/primary_button_modern"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="CHECK VEHICLE'S CURRENT STATUS"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:paddingHorizontal="24dp"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Test Drive Buttons Card (Hidden) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/enableButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Test Drive Options"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/forTestDriveOut"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/test_drive_button_gradient"
                            android:textSize="16sp"
                            android:text="Test Drive Out"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/forTestDriveIn"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/test_drive_button_gradient"
                            android:textSize="16sp"
                            android:text="Test Drive In"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Input Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Enter Vehicle Details"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:id="@+id/newVehLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/newVehEditText"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:hint="Enter Vehicle Number"
                            android:inputType="textCapCharacters"
                            android:padding="16dp"
                            android:background="@drawable/modern_edittext_gradient"
                            android:elevation="2dp"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#1A237E"
                            android:textColorHint="#7986CB"
                            android:layout_marginEnd="12dp" />

                        <ImageButton
                            android:id="@+id/newVehInButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/search"
                            android:fontFamily="sans-serif-medium"
                            android:padding="12dp"
                            android:elevation="6dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/regNoDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:text="Details By Vehicle Number"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A237E"
                        android:textSize="18sp" />

                    <HorizontalScrollView
                        android:id="@+id/tableScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_background"
                        android:padding="8dp">

                        <TableLayout
                            android:id="@+id/tableLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1"
                            android:padding="12dp" />

                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Refresh Action Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:text="Actions"-->
<!--                        android:textColor="#1A237E"-->
<!--                        android:textSize="18sp"-->
<!--                        android:fontFamily="sans-serif-medium"-->
<!--                        android:layout_marginBottom="16dp" />-->

                    <TextView
                        android:id="@+id/refreshBtn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/info_button_gradient"
                        android:textSize="16sp"
                        android:text="Refresh"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>