<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_gradient">

    <LinearLayout
        android:id="@+id/lineralay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical"
    android:background="@color/colorPrimaryDark"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:src="@drawable/sslogo"
        android:contentDescription="App Logo"
        android:layout_weight="1"
        android:scaleType="fitStart"/>

    <ImageView
        android:id="@+id/logoutBtn"
        android:layout_width="28dp"
        android:src="@drawable/logout"
        android:contentDescription="Logout Button"
        app:tint="@color/text_light"
        android:layout_height="20dp"/>

</LinearLayout>

    <!-- User and Location Info -->
<LinearLayout
android:id="@+id/line1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:background="@drawable/info_banner_background"
android:paddingStart="16dp"
android:paddingTop="8dp"
android:paddingEnd="16dp"
android:paddingBottom="8dp"
android:elevation="4dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/lineralay">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="USERNAME: "
    android:textColor="@color/text_primary"
    android:textStyle="bold"
    android:textSize="14sp" />

<TextView
    android:id="@+id/username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="username"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold"
    android:textSize="14sp" />

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text="LOCATION: "
    android:textColor="@color/text_primary"
    android:textStyle="bold"
    android:textSize="14sp" />

<TextView
    android:id="@+id/locIdTxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="locId"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold"
    android:textSize="14sp" />
</LinearLayout>

    <!-- Scrollable Content Section -->
<ScrollView
android:layout_width="match_parent"
android:layout_height="0dp"
android:fillViewport="true"
app:layout_constraintTop_toBottomOf="@id/line1"
app:layout_constraintBottom_toBottomOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_margin="16dp"
    android:background="@drawable/card_container_background"
    android:elevation="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT SEARCH OPTION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/forVehicleNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="By Vehicle No"
            android:backgroundTint="@color/button_default"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/forGatePassNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="By Gate Pass"
            android:backgroundTint="@color/button_default"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginStart="10dp"
            android:elevation="4dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

    <!-- Input Field for Search -->
    <TextView
        android:id="@+id/noShowingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Gate Pass Number"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/invoiceNumberField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Gate Pass/Vehicle No"
        android:inputType="textCapCharacters"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_background"
        android:elevation="2dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary" />

    <!-- Search Buttons -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/text_light"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        style="@style/Widget.MaterialComponents.Button" />

    <Button
        android:id="@+id/searchButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/text_light"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button" />

    <!-- TextViews for Invoice Data -->
    <TextView
        android:id="@+id/invoiceNumberTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/vehicleNumberTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/gatePassNumberTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/nameTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/transactionNoTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/transactionNoDateTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        android:text="You can edit the contact no for OTP"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/contactNoTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/partyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/amountRemainingTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/serviceExecutive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/modelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/addressTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/text_primary"
        android:padding="12dp"
        android:background="@drawable/textview_display_background"
        android:elevation="2dp"
        android:layout_marginBottom="20dp" />

    <!-- Payment Details Section -->
    <LinearLayout
        android:id="@+id/invoiceDataLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Payment Mode"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/paymentModeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Select Payment Method"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/paymentIdSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/sendOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_warning"
            android:elevation="4dp"
            android:padding="14dp"
            android:text="Generate OTP"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            style="@style/Widget.MaterialComponents.Button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Enter OTP"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/otpInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_rounded_background"
            android:elevation="2dp"
            android:hint="Enter OTP from the user"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <Button
            android:id="@+id/verifyOTPButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/button_warning"
            android:elevation="4dp"
            android:padding="14dp"
            android:text="Verify OTP"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Enter customer paying amount"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/amountPaidTxtField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_rounded_background"
            android:elevation="2dp"
            android:hint="Enter Amount Paid By User"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <TextView
            android:id="@+id/upiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Enter Transaction Number"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/upiInputTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_rounded_background"
            android:elevation="2dp"
            android:hint="Enter UPI Transaction Number"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <TextView
            android:id="@+id/imageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="IMAGE OF UPI DETAILS"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/image_placeholder_background"
            android:scaleType="centerInside"
            android:src="@drawable/image_placeholder"
            android:contentDescription="UPI Details Image"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/captureImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_circle_primary"
                android:src="@drawable/ic_camera"
                android:contentDescription="Capture Image"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginEnd="40dp"
                app:tint="@color/text_light" />

            <ImageButton
                android:id="@+id/deleteImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_circle_danger"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Image"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginStart="40dp"
                app:tint="@color/text_light" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/detailsSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit Details"
            android:backgroundTint="@color/button_success"
            android:textColor="@color/text_light"
            android:visibility="gone"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/clearFields"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REFRESH"
            android:backgroundTint="@color/button_refresh"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginStart="10dp"
            android:elevation="4dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>

</ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
