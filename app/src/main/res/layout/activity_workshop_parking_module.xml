<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@drawable/header_gradient">

            <ImageView
                android:id="@+id/amazonImage"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/saiservicelogocp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Fixed Layout for User Info -->
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/info_background"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amazonImage">

                <!-- Username Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USERNAME: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:text="username"
                        android:textColor="#FFD700"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCATION: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/locIdTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locId"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Department Row -->
                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deptTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEPARTMENT: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/deptIntent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locId"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Title Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/vehicleHistoryButtonLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/title_card_gradient">

                    <TextView
                        android:id="@+id/testDriveTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="VEHICLE PARKING"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/vehicleHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/primary_button_modern"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Vehicle In-Out History"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="14dp"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Department Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/selectDeptMainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Select Department"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/deptTextView"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:background="@drawable/department_button_gradient"
                            android:text="SERVICE"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp" />

                        <TextView
                            android:id="@+id/deptTextView2"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:background="@drawable/department_button_gradient"
                            android:text="BODYSHOP"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/deptTextView3"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:background="@drawable/department_button_gradient"
                            android:text="ARENA SALES"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp" />

                        <TextView
                            android:id="@+id/deptTextView4"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:background="@drawable/department_button_gradient"
                            android:text="NEXA SALES"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/deptTextView5"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:background="@drawable/department_button_gradient"
                            android:text="TRUE VALUE"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp" />

                        <TextView
                            android:id="@+id/deptTextView6"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:background="@drawable/department_button_gradient"
                            android:text="OTHERS"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/selectedDeptLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:padding="16dp"
                        android:background="@drawable/selected_dept_background"
                        android:layout_marginHorizontal="8dp">

                        <TextView
                            android:id="@+id/selectedDeptTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected Department: "
                            android:textColor="#1A237E"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/selectedDeptTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#3F51B5"
                            android:background="@drawable/new_edittext_modern"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Operations Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/vehicleOperations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vehicle Operations"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:id="@+id/vehHistoryLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/forNewVehicleIn"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="Vehicle In"
                            android:background="@drawable/warning_button_gradient"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/forNewVehicleOut"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:background="@drawable/warning_button_gradient"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Vehicle Out"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/physicallyOutLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/physicallyOutButton"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:paddingHorizontal="32dp"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/danger_button_gradient"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Vehicle Out Physically"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Number Input Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/vehicleInputFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vehicle Input"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:id="@+id/captureVehNumberIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/capture_section_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Capture Vehicle Number"
                            android:textColor="#1A237E"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/captureRegNoCameraIn"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/camera"
                            android:elevation="6dp"
                            android:padding="12dp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/enableButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/forTestDriveOut"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/test_drive_button_gradient"
                            android:textSize="16sp"
                            android:text="Test Drive Out"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/forTestDriveIn"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/test_drive_button_gradient"
                            android:textSize="16sp"
                            android:text="Test Drive In"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="4dp"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/newVehLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <AutoCompleteTextView
                            android:id="@+id/newVehEditText"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:hint="Vehicle Number"
                            android:inputType="textCapCharacters"
                            android:padding="16dp"
                            android:background="@drawable/modern_edittext_gradient"
                            android:elevation="2dp"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#1A237E"
                            android:textColorHint="#7986CB"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/newVehInButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/search"
                            android:fontFamily="sans-serif-medium"
                            android:padding="12dp"
                            android:elevation="6dp" />

                        <ImageButton
                            android:id="@+id/newVehOutButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/search"
                            android:fontFamily="sans-serif-medium"
                            android:padding="12dp"
                            android:elevation="6dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/physicallyOutLLTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/physicallyOutVehEditText"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:hint="Vehicle Number"
                            android:inputType="textCapCharacters"
                            android:padding="16dp"
                            android:background="@drawable/modern_edittext_gradient"
                            android:elevation="2dp"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#1A237E"
                            android:textColorHint="#7986CB"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/physicallyOutVehButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/search"
                            android:fontFamily="sans-serif-medium"
                            android:padding="12dp"
                            android:elevation="6dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/regNoDetailsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/regNoDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:text="Details By Vehicle Number"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1A237E"
                        android:textSize="18sp" />

                    <HorizontalScrollView
                        android:id="@+id/tableScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_background">

                        <TableLayout
                            android:id="@+id/tableLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1"
                            android:padding="16dp" />

                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Form Fields Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/requiredDetailsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Enter Required Details"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="24dp" />

                    <TextView
                        android:id="@+id/kmTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Enter/Capture current KM's"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/captureToKm"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/camera"
                        android:elevation="6dp" />

                    <EditText
                        android:id="@+id/currentKMSField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter Current Km"
                        android:inputType="textCapCharacters"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_edittext_gradient"
                        android:elevation="2dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#1A237E"
                        android:textColorHint="#7986CB" />

                    <!-- Driver Section -->
                    <TextView
                        android:id="@+id/driverTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Select Driver Name"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <AutoCompleteTextView
                        android:id="@+id/driverNameAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter Driver Name"
                        android:inputType="text"
                        android:textColor="#1A237E"
                        android:textColorHint="#7986CB"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_edittext_gradient"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:elevation="2dp" />

                    <!-- Remarks Section -->
                    <TextView
                        android:id="@+id/remarksTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Enter Remarks"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/remarksField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter Remarks"
                        android:inputType="textCapCharacters"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_edittext_gradient"
                        android:elevation="2dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#1A237E"
                        android:textColorHint="#7986CB" />

                    <!-- Reason Code Section -->
                    <TextView
                        android:id="@+id/reasonCodeTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Vehicle Out Reason"
                        android:layout_marginBottom="12dp"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/reasonCodeLov"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_spinner_gradient"
                        android:elevation="2dp" />

                    <!-- Transfer Location Section -->
                    <TextView
                        android:id="@+id/transferLocationTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select the Vehicle Out Reason"
                        android:layout_marginBottom="12dp"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/transferLocationLov"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_spinner_gradient"
                        android:elevation="2dp" />

                    <!-- Parking Section -->
                    <TextView
                        android:id="@+id/parkingEditTextTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Parking Remarks"
                        android:layout_marginBottom="12dp"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/parkingEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter Parking"
                        android:inputType="textCapCharacters"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_edittext_gradient"
                        android:elevation="2dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#1A237E"
                        android:textColorHint="#7986CB" />

                    <!-- Gate Number Section -->
                    <TextView
                        android:id="@+id/gateNumberTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Gate Number"
                        android:layout_marginBottom="12dp"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/gateNoLov"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/modern_spinner_gradient"
                        android:elevation="2dp" />

                    <!-- Gate Type Section -->
                    <TextView
                        android:id="@+id/gateTypeTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Gate Type"
                        android:layout_marginBottom="12dp"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/gateTypeLov"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/modern_spinner_gradient"
                        android:elevation="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/buttonLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/newVehicleInPremises"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/success_button_gradient"
                        android:text="Vehicle In"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/newVehicleOutPremises"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/success_button_gradient"
                        android:text="Vehicle Out"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/physicallyOutVehicleSave"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/danger_button_gradient"
                        android:text="Vehicle Out Physically"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/refreshButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/info_button_gradient"
                        android:text="REFRESH FIELDS"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>