<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@drawable/header_gradient">

            <ImageView
                android:id="@+id/amazonImage"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/saiservicelogocp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Fixed Layout for User Info -->
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/info_background"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amazonImage">

                <!-- Username Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USERNAME: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:text="username"
                        android:textColor="#FFD700"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCATION: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/locIdTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locId"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Department Row -->
                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deptTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEPARTMENT: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/deptIntent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locId"
                        android:textColor="#FFD700"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/vehicleHistoryButtonLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/title_card_gradient">

                    <TextView
                        android:id="@+id/washingTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="WASHING CONTROL"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/washingHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/primary_button_modern"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="WASHING HISTORY"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="14dp"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:id="@+id/selectDeptMainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <LinearLayout
                android:id="@+id/washInLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/washIn"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:background="@drawable/department_button_gradient"
                    android:text="WASH IN"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/washOut"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:background="@drawable/department_button_gradient"
                    android:text="WASH OUT"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="4dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/captureVehNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:background="@drawable/capture_section_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capture Vehicle Number"
                    android:textColor="#1A237E"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/captureRegNoCamera"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/camera"
                    android:elevation="6dp"
                    android:padding="12dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/vehNoEnterLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/enterVehNumber"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:hint="Vehicle Number"
                    android:inputType="textCapCharacters"
                    android:padding="16dp"
                    android:background="@drawable/modern_edittext_gradient"
                    android:elevation="2dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#1A237E"
                    android:textColorHint="#7986CB"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/vehWashButtonIn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/search"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:elevation="6dp" />

                <ImageButton
                    android:id="@+id/vehWashButtonOut"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/search"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:elevation="6dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/chassisNoEnterLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/enterChassisNumber"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:hint="Chassis Number"
                    android:inputType="textCapCharacters"
                    android:padding="16dp"
                    android:background="@drawable/modern_edittext_gradient"
                    android:elevation="2dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#1A237E"
                    android:textColorHint="#7986CB"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/chassisWashButtonIn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/search"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:elevation="6dp" />

                <ImageButton
                    android:id="@+id/chassisWashButtonOut"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/search"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:elevation="6dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/regNoDetails"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Details By Vehicle Number"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <HorizontalScrollView
                android:id="@+id/tableScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="23dp">

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1" />

            </HorizontalScrollView>

            <TextView
                android:id="@+id/washStageNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Wash Stage"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/washStageNumberLov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/modern_spinner_background"/>

            <TextView
                android:id="@+id/washStageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Wash Type"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/washStageTypeLov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/modern_spinner_background"/>

            <LinearLayout
                android:id="@+id/checkBoxContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/buttonLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/success_button_gradient"
                        android:text="WASH IN"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/submitButtonOut"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/success_button_gradient"
                        android:text="WASH OUT"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <TextView
                        android:id="@+id/resetFields"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/danger_button_gradient"
                        android:text="REFRESH FIELDS"
                        android:elevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
