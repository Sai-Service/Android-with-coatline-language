<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

        <style name="TableCell">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:padding">8dp</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:background">@drawable/table_cell_background</item>
        </style>

    <style name="CardViewTheme">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CommonEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

</resources>
