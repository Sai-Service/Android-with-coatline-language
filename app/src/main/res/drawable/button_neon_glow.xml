<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/neon_pink"
                android:endColor="@color/neon_blue"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke android:width="3dp" android:color="@color/neon_green" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/neon_button_start"
                android:endColor="@color/neon_button_end"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke android:width="3dp" android:color="@color/neon_purple" />
        </shape>
    </item>
</selector>
